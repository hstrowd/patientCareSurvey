<%= form_tag(returning_patient_personal_path, id: 'returning-personal-details', class: :survey) do %>
  <div class="title">Please answer the following:</div>

  <div class="question name">
    <%= label_tag(:full_name, 'What is your first and last name?') %>
    <div class="response">
      <%= text_field_tag(:first_name, '', placeholder: 'First Name') %>
      <%= text_field_tag(:last_name, '', placeholder: 'Last Name') %>
    </div>
  </div>

  <div class="question birth-date">
    <%= label_tag(:birth_date, 'What is your date of birth?') %>
    <div class="response">
      <%= date_field_tag(:birth_date) %>
      <!-- TODO: Find a better date field. -->
    </div>
  </div>

  <div class="question seizure-count">
    <%= label_tag(:seizure_count, 'How many seizures have you had in the past one month?') %>
    <div class="response">
      <%= number_field_tag(:seizure_count, nil, min: 0) %>
    </div>
  </div>

  <div class="question steroid-dose">
    <%= label_tag(:steroid_dose, 'What is your current dose of steroids (dexamethasone)?') %>
    <div class="response">
      <div class="dose">
        <%= number_field_tag(:steroid_dose, nil, min: 0) %> mg
      </div>
      <div class="unknown">
        <%= check_box_tag(:unknown_steroid_dose) %> 
        <%= label_tag(:unknown_steroid_dose, 'N/A') %>
      </div>
    </div>
  </div>

  <div class="question is-working">
    <%= label_tag(:is_working, 'Are you currently working?') %>
    <div class="response">
      <%= select_tag(:is_working, options_for_select([ ['Select one...', :select],
                                                       ['Full Time', :full],
                                                       ['Part Time', :part],
                                                       ['No',  :none] ])) %>
    </div>
  </div>

  <div class="question rating depressed">
    <%= label_tag(:depressed_rating, 'In the past week, I have spent more than half of the time feeling depressed:') %>
    <div class="response">
      <div class="option">
        <%= radio_button_tag(:depressed_rating, :strong_agree) %>
        <%= label_tag(:depressed_rating_strong_agree, 'Strongly Agree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:depressed_rating, :agree) %>
        <%= label_tag(:depressed_rating_agree, 'Agree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:depressed_rating, :neutral) %>
        <%= label_tag(:depressed_rating_neutral, 'Neutral') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:depressed_rating, :disagree) %>
        <%= label_tag(:depressed_rating_disagree, 'Disagree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:depressed_rating, :strong_disagree) %>
        <%= label_tag(:depressed_rating_strong_disagree, 'Strongly Disagree') %>
      </div>
    </div>
  </div>

  <div class="question rating depressed">
    <%= label_tag(:hope_rating, 'In the past week, I have spent more than half of the time feeling no hope:') %>
    <div class="response">
      <div class="option">
        <%= radio_button_tag(:hope_rating, :strong_agree) %>
        <%= label_tag(:depressed_rating_strong_agree, 'Strongly Agree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:hope_rating, :agree) %>
        <%= label_tag(:depressed_rating_agree, 'Agree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:hope_rating, :neutral) %>
        <%= label_tag(:depressed_rating_neutral, 'Neutral') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:hope_rating, :disagree) %>
        <%= label_tag(:depressed_rating_disagree, 'Disagree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:hope_rating, :strong_disagree) %>
        <%= label_tag(:depressed_rating_strong_disagree, 'Strongly Disagree') %>
      </div>
    </div>
  </div>

  <div class="question rating spiritual">
    <%= label_tag(:spiritual_rating, 'I consider myself a spiritual person:') %>
    <div class="response">
      <div class="option">
        <%= radio_button_tag(:spiritual_rating, :strong_agree) %>
        <%= label_tag(:depressed_rating_strong_agree, 'Strongly Agree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:spiritual_rating, :agree) %>
        <%= label_tag(:depressed_rating_agree, 'Agree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:spiritual_rating, :neutral) %>
        <%= label_tag(:depressed_rating_neutral, 'Neutral') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:spiritual_rating, :disagree) %>
        <%= label_tag(:depressed_rating_disagree, 'Disagree') %>
      </div>
      <div class="option">
        <%= radio_button_tag(:spiritual_rating, :strong_disagree) %>
        <%= label_tag(:depressed_rating_strong_disagree, 'Strongly Disagree') %>
      </div>
    </div>
  </div>

  <div class="question rating support-sources">
    <%= label_tag(:support_sources, 'I find my support from (select all that apply):') %>
    <div class="response">
      <div class="option">
        <%= check_box_tag(:self_support) %>
        <%= label_tag(:self_support, 'Myself') %>
      </div>
      <div class="option">
        <%= check_box_tag(:family_support) %>
        <%= label_tag(:family_support, 'Family') %>
      </div>
      <div class="option">
        <%= check_box_tag(:friend_support) %>
        <%= label_tag(:friend_support, 'Friends') %>
      </div>
      <div class="option">
        <%= check_box_tag(:religion_support) %>
        <%= label_tag(:religion_support, 'Religion') %>
      </div>
      <div class="option">
        <%= check_box_tag(:other_support) %>
        <%= label_tag(:other_support, 'Other') %>
      </div>
    </div>
  </div>


  <div class="actions">
    <%= button_tag("Cancel", 
                   onClick: 'window.location.assign("' + root_path + '")', 
                   type: :button, 
                   class: :cancel) %>
    <%= submit_tag("Next", class: :submit) %>
  </div>

<% end %>
