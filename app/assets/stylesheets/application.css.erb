html {
    height: 100%;
    width: 100%;
}

body {
    height: 100%;
    width: 100%;
    margin: 0;
    
    font-family: Candara, Calibri, Segoe, "Segoe UI", Optima, Arial, sans-serif;
}


.gradient {
    height: 5%;
    width: 100%;
}
.gradient img {
    height: 100%;
    width: 100%;
    float: left;
}

.centerer {
    display: inline-block;
    height: 100%;
    vertical-align: middle;
}



/**
 *  Header
 */

#header {
    display: inline-block;
    width: 100%;
    height: 10%;
    background-color: #FFFFFF;
    text-align: center;
}
#header .title-bar {
    width: 90%;
    max-width: 60em;
    height: 100%;
    margin: 0 auto;

    text-align: center;
}

#header .provider-logo {
    display: inline-block;

    height: 100%;
    width: 40%;
    text-align: left;
    vertical-align: middle;
}
#header .provider-logo img {
    max-height: 100%;
    max-width: 100%;
}

#header .app-title {
    display: inline-block;

    width: 55%;
    text-align: right;
    vertical-align: middle;

    font-size: 1.5em;
}
#header .app-title a {
    color: #000000;
    text-decoration: none;
}


/**
 *  Body
 */

#page-body {
    height: 75%;
    overflow-y: scroll;
    background-color: #F5F5F5;
}

#page-body form.survey {
    width: 95%;
    max-width: 50em;
    margin: 0 auto;
}

#page-body form.survey .title {
    margin: 1% 5%;
    font-size: 1.2em;
}

#page-body form.survey .question {
    margin: 2% 0;
}

#page-body form.survey .question label {
    display: inline-block;
    width: 40%;
    min-width: 20em;
    vertical-align: middle;
}
#page-body form.survey .question .response {
    display: inline-block;
    width: 40%;
    min-width: 20em;
    margin: 0 3%;
    vertical-align: middle;
}
#page-body form.survey .rating label {
    width: 100%;
}
#page-body form.survey .rating .response {
    width: 90%;
    margin: 0 auto;
    text-align: center;
}
#page-body form.survey .question .response .option {
    display: inline-block;
    margin: 0 2%;
}
#page-body form.survey .question .response .option input {
    display: inline-block;
}
#page-body form.survey .question .response .option label {
    display: inline-block;
    width: initial;
    min-width: 0;
}

#page-body form.survey .actions {
    width: 100%;
    margin: 2% auto;

    text-align: center;
}
#page-body form.survey .actions input,
#page-body form.survey .actions button {
    width: 10%;
    min-width: 10em;
    margin: 1%;
    padding: 2%;
    
    border: .1em solid #888888;
    border-radius: .5em;

    color: #444444;
    font-size: 1em;
}
#page-body form.survey .actions input:hover,
#page-body form.survey .actions button:hover {
    border: .1em solid #444444;
    color: #000000;
}
#page-body form.survey .actions input.submit {
    background-color: #C7FFC2;
}
#page-body form.survey .actions input.submit:hover {
    background-color: #A9FFA2;
}
#page-body form.survey .actions button.cancel {
    background-color: #FFAFAF;
}
#page-body form.survey .actions button.cancel:hover {
    background-color: #FD8F8F;
}

/**
 *  Footer
 */

#footer {
    height: 10%;
    background-color: #FFFFFF;
}

#footer .gradient {
    height: 20%;
}

#footer .hospital-logo {
    height: 70%;
    margin: auto;
    padding: .2em;
    text-align: center;
}
#footer .hospital-logo img {
    max-width: 100%;
    max-height: 100%;
}

#footer .copyright {
    width: 30em;
    margin: auto;
    
    text-align: center;
    font-family: tahoma,helvetica,sans-serif;
    font-size: .6em;
    color: #777777;
}
